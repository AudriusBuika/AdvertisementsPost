{% extends "::base.html.twig" %}

{% block title %}Login{% endblock %}

{% block body %}
    <h2>Login</h2>
    <div class="well">
        <form action="{{ path('login') }}" method="post">
            <div class="form-group">
                <label class="control-label required" for="_username">Username</label>
                <input type="text" id="_username" name="_username" required="required" class="form-control form-control" />
            </div>
            <div class="form-group">
                <label class="control-label required" for="_password">Password</label>
                <input type="password" id="_password" name="_password" required="required" class="form-control form-control" />
            </div>
            <button type="submit" class="btn btn-success">Login</button></form>
    </div>
{% endblock %}
